<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_fr_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/colorAccent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_tab_height"
        android:layout_gravity="top"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:contentDescription="@string/btn_back_description"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:src="@drawable/back_btn_selector"
            android:visibility="invisible"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_fr_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/billabong"
            android:layout_marginTop="4dp"
            android:padding="4dp"
            android:text="@string/root_fr_header"
            android:textColor="@color/colorAccent"
            android:textSize="26sp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/fragment_text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Fragment 1"/>

    <Button
        android:id="@+id/bt_new_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:text="@string/bt_new_fragment"
        android:textAllCaps="false"
        tools:text="New Fragment"/>

</FrameLayout>